<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/app_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_10"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/user_image"
            android:layout_width="@dimen/sp_50"
            android:layout_height="@dimen/sp_50">

            <RelativeLayout
                android:id="@+id/iv_circle_image"
                android:layout_width="@dimen/sp_50"
                android:layout_height="@dimen/sp_50"
                android:background="@drawable/ellipse_thic_boder" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/call_user_profile"
                android:layout_width="@dimen/sp_50"
                android:layout_height="@dimen/sp_50"
                android:padding="@dimen/sp_1"
                android:src="@drawable/ic_user_img" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/lin_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/call_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sp_21"
                        android:layout_marginRight="@dimen/margin_10"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="top"
                        android:text="@string/notification"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lin_top"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/call_img"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/margin_20"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/sp_1"
                        android:layout_toLeftOf="@dimen/sp_6"
                        android:src="@drawable/ic_call_outgoing"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/txt_call_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_toRightOf="@id/call_img"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/advertisement"
                        android:drawableLeft="@null"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_centerInParent="true"
                        android:drawablePadding="5dp"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_12" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_10"
                    android:src="@drawable/ic_video_call_icon"
                    app:tint="@color/app_color" />

                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="@dimen/sp_25"
                    android:layout_height="@dimen/sp_25"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/margin_5"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_close_20" />



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>