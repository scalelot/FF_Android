<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:padding="@dimen/sp_10">

    <ImageView
        android:id="@+id/dialog_close"
        android:layout_width="@dimen/sp_25"
        android:layout_height="@dimen/sp_25"
        android:layout_alignParentRight="true"
        android:padding="@dimen/margin_5"
        android:src="@drawable/ic_baseline_close_20" />

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="@dimen/sp_70"
        android:layout_height="@dimen/sp_70"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20"
        android:src="@drawable/reject_close_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_close"
        android:layout_margin="@dimen/margin_20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/reject_request"
            android:textColor="@color/black"
            android:textSize="@dimen/text_20" />

        <TextView
            android:id="@+id/txt_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_reject"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sp_10"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/reject_alert_txt"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dis_txt"
            android:layout_marginTop="@dimen/margin_20"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_block"
                android:layout_width="@dimen/margin_130"
                android:layout_height="@dimen/sp_40"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_weight="1"
                android:background="@drawable/red_btn_boder"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="@dimen/margin_30"
                android:paddingRight="@dimen/margin_30"
                android:text="@string/block"
                android:textColor="@color/red"
                android:textSize="@dimen/text_14" />

            <View
                android:layout_width="@dimen/sp_15"
                android:layout_height="@dimen/sp_40" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_reject"
                android:layout_width="@dimen/margin_130"
                android:layout_height="@dimen/sp_40"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_weight="1"
                android:background="@drawable/rectangle_150"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="@dimen/margin_30"
                android:paddingRight="@dimen/margin_30"
                android:text="@string/reject"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <!--        <androidx.appcompat.widget.AppCompatButton-->
        <!--            android:id="@+id/button_reject"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="@dimen/sp_40"-->
