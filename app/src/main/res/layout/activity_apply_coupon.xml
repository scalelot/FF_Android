<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ApplyCouponActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_56">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_8">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="@dimen/sp_35"
                android:layout_height="@dimen/sp_35"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:padding="@dimen/margin_6"
                android:src="@drawable/backarrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_toRightOf="@+id/back_btn"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/apply_coupon"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/rl_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_140"
        android:layout_below="@+id/appbar_layout"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginEnd="@dimen/margin_20"
        android:background="@drawable/notification_bg">

        <TextView
            android:id="@+id/txt_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_20"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/save_30"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_30_apply"
            android:layout_width="@dimen/sp_60"
            android:layout_height="@dimen/sp_25"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/login_btn_bg"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/apply"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sp_1"
            android:layout_below="@+id/txt_30"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/ic_dot_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_15"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="@dimen/margin_5"
            android:text="@string/plan_description"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_12" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_50"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_140"
        android:layout_below="@+id/rl_30"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/notification_bg">


        <TextView
            android:id="@+id/txt_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_20"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/save_50"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_50_apply"
            android:layout_width="@dimen/sp_60"
            android:layout_height="@dimen/sp_25"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/login_btn_bg"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/apply"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sp_1"
            android:layout_below="@+id/txt_50"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/ic_dot_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_15"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="@dimen/margin_5"
            android:maxLines="4"
            android:text="@string/plan_description"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_12" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_80"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_140"
        android:layout_below="@+id/rl_50"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@drawable/notification_bg">


        <TextView
            android:id="@+id/txt_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_20"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/upTo_save_80"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_80_apply"
            android:layout_width="@dimen/sp_60"
            android:layout_height="@dimen/sp_25"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/login_btn_bg"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/apply"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sp_1"
            android:layout_below="@+id/txt_80"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/ic_dot_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_15"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="@dimen/margin_5"
            android:maxLines="4"
            android:text="@string/plan_description"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_12" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ads"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_78"
        android:layout_below="@+id/rl_80"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        android:background="@mipmap/ads" />

</RelativeLayout>