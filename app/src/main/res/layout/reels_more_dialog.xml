<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_dialog_bg"
    android:orientation="vertical">

    <View
        android:id="@+id/v1"
        android:layout_width="@dimen/sp_60"
        android:layout_height="@dimen/sp_5"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/edt_bg"
        android:backgroundTint="@color/bg_grey" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_20"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/more_option"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20" />

    <LinearLayout
        android:id="@+id/ll_delete_reels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/sp_20"
            android:layout_height="@dimen/sp_20"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/delete_reels"
            android:textColor="@color/red"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_reels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/sp_20"
            android:layout_height="@dimen/sp_20"
            android:padding="@dimen/sp_1"
            android:src="@drawable/ic_reels_edit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/edit_reels"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_copy_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/sp_20"
            android:layout_height="@dimen/sp_20"
            android:src="@drawable/ic_copy_link"
            android:padding="@dimen/sp_1"
            app:tint="@color/grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/copy_link"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_share_reels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_30"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/sp_20"
            android:layout_height="@dimen/sp_20"
            android:src="@drawable/ic_outline_share"
            app:tint="@color/grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/share_reels"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_14" />
    </LinearLayout>
</LinearLayout>