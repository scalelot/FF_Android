<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_addProduct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context="com.festum.festumfield.Activity.AddProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sp_56">

            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_8">

                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="@dimen/sp_35"
                    android:layout_height="@dimen/sp_35"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:padding="@dimen/margin_6"
                    android:src="@drawable/backarrow" />

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toRightOf="@+id/ic_back"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/add_product"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18" />
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sp_190"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_20"
                    app:cardBackgroundColor="@color/bg_grey"
                    app:cardCornerRadius="@dimen/margin_5">

                    <LinearLayout
                        android:id="@+id/lin_add_images"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/margin_40"
                            android:layout_height="@dimen/margin_40"
                            android:src="@drawable/ic_addimage" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/add_image"
                            android:textColor="@color/edt_hint"
                            android:textSize="@dimen/text_14" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_add_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sp_56"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_20"
                    android:paddingRight="@dimen/sp_20">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@color/bg_grey"
                        app:cardCornerRadius="@dimen/margin_5">

                        <LinearLayout
                            android:id="@+id/ll_product1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/sp_16"
                                android:layout_height="@dimen/sp_16"
                                android:src="@drawable/ic_addimage" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_5"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/add_sub_image"
                                android:textColor="@color/edt_hint"
                                android:textSize="@dimen/text_10" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_product1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="match_parent" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@color/bg_grey"
                        app:cardCornerRadius="@dimen/margin_5">

                        <LinearLayout
                            android:id="@+id/ll_product2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/sp_16"
                                android:layout_height="@dimen/sp_16"
                                android:src="@drawable/ic_addimage" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_5"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/add_sub_image"
                                android:textColor="@color/edt_hint"
                                android:textSize="@dimen/text_10" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_product2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="match_parent" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@color/bg_grey"
                        app:cardCornerRadius="@dimen/margin_5">

                        <LinearLayout
                            android:id="@+id/ll_product3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/sp_16"
                                android:layout_height="@dimen/sp_16"
                                android:src="@drawable/ic_addimage" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_5"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/add_sub_image"
                                android:textColor="@color/edt_hint"
                                android:textSize="@dimen/text_10" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_product3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <EditText
                    android:id="@+id/edt_pro_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sp_45"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/edt_bg"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/product_nam"
                    android:imeOptions="actionNext"
                    android:paddingLeft="@dimen/margin_15"
                    android:singleLine="true"
                    android:textColor="@color/edt_dark"
                    android:textColorHint="@color/edt_hint"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/edt_pro_price"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sp_45"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/edt_bg"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/product_pri"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:paddingLeft="@dimen/margin_15"
                    android:singleLine="true"
                    android:textColor="@color/edt_dark"
                    android:textColorHint="@color/edt_hint"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/edt_pro_des"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sp_80"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/edt_bg"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="top|left"
                    android:hint="@string/product_des"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/margin_12"
                    android:textColor="@color/edt_dark"
                    android:textColorHint="@color/edt_hint"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/edt_category"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sp_45"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/edt_bg"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/category"
                    android:imeOptions="actionNext"
                    android:paddingLeft="@dimen/margin_15"
                    android:singleLine="true"
                    android:textColor="@color/edt_dark"
                    android:textColorHint="@color/edt_hint"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/edt_subcategory"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sp_45"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/edt_bg"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/subcategory"
                    android:imeOptions="actionNext"
                    android:paddingLeft="@dimen/margin_15"
                    android:singleLine="true"
                    android:textColor="@color/edt_dark"
                    android:textColorHint="@color/edt_hint"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/edt_offer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sp_45"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/edt_bg"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/offers"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:paddingLeft="@dimen/margin_15"
                    android:singleLine="true"
                    android:textColor="@color/edt_dark"
                    android:textColorHint="@color/edt_hint"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/edt_pro_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sp_45"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/edt_bg"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/product_cod"
                    android:imeOptions="actionDone"
                    android:paddingLeft="@dimen/margin_15"
                    android:singleLine="true"
                    android:textColor="@color/edt_dark"
                    android:textColorHint="@color/edt_hint"
                    android:textSize="@dimen/sp_14" />

                <RelativeLayout
                    android:id="@+id/rl_ads"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sp_78"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@mipmap/ads" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_save_product"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_50"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:background="@drawable/login_btn_bg"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:visibility="visible" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>