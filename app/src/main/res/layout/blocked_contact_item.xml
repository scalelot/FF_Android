<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contact_user"
            android:layout_width="@dimen/sp_40"
            android:layout_height="@dimen/sp_40"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_img" />

        <TextView
            android:id="@+id/txt_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@+id/contact_user"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/phone_number"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_unblock"
            android:layout_width="@dimen/sp_75"
            android:layout_height="@dimen/sp_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/edt_bg"
            android:backgroundTint="@color/app_color"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/unblock"
            android:textColor="@color/white"
            android:textSize="@dimen/text_10" />
    </RelativeLayout>
</RelativeLayout>