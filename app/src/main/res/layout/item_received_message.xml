<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/relative"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_20"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginBottom="@dimen/margin_5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5"
        android:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rec_profile_pic"
            android:layout_width="@dimen/sp_20"
            android:layout_height="@dimen/sp_20"
            android:layout_centerVertical="true"
            android:src="@drawable/girl_image" />

        <TextView
            android:id="@+id/recive_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_toRightOf="@id/rec_profile_pic"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/name"
            android:textColor="@color/app_color"
            android:textSize="@dimen/text_12"
            android:visibility="visible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/receivedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_name"
        android:background="@drawable/chat_txt_left_bg"
        android:maxWidth="@dimen/margin_250"
        android:padding="@dimen/margin_10"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/receivedText"
        android:layout_marginTop="@dimen/margin_5">

        <TextView
            android:id="@+id/rec_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_10" />

    </RelativeLayout>

</RelativeLayout>