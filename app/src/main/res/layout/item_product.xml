<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_10">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_image"
            android:layout_width="@dimen/sp_60"
            android:layout_height="@dimen/sp_60"
            app:cardCornerRadius="@dimen/sp_5">

            <ImageView
                android:id="@+id/iv_pro_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_img" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_toLeftOf="@id/lin_icon"
            android:layout_toRightOf="@id/card_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_pro_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:singleLine="true"
                android:text="@string/cup_cake"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/txt_pro_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:singleLine="true"
                android:text="@string/there_are_des"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_pro_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_pro_offer_bg"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margin_10"
                    android:padding="@dimen/margin_2"
                    android:singleLine="true"
                    android:text="@string/off"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/txt_pro_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:singleLine="true"
                    android:text="@string/some_id"
                    android:textColor="@color/darkturquoise"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30"
                android:padding="@dimen/sp_3"
                android:src="@drawable/ic_delete_border" />

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30"
                android:layout_marginLeft="@dimen/sp_5"
                android:padding="@dimen/sp_3"
                android:src="@drawable/ic_edit_border" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>