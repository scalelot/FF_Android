<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sp_65"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_shadow"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/lin_chats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_chats"
                android:layout_width="@dimen/sp_25"
                android:layout_height="@dimen/sp_25"
                android:layout_gravity="center"
                android:src="@drawable/ic_chat" />

            <TextView
                android:id="@+id/txt_chats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_5"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="@string/tab_chat"
                android:textAllCaps="false"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_find_friend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_find_friend"
                android:layout_width="@dimen/sp_25"
                android:layout_height="@dimen/sp_25"
                android:layout_gravity="center"
                android:src="@drawable/ic_location_icon"
                app:tint="@color/grey" />

            <TextView
                android:id="@+id/txt_find_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_5"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="@string/tab_find_friend"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_calls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_calls"
                android:layout_width="@dimen/sp_25"
                android:layout_height="@dimen/sp_25"
                android:layout_gravity="center"
                android:src="@drawable/ic_audio_call"
                app:tint="@color/grey" />

            <TextView
                android:id="@+id/txt_calls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_5"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="@string/tab_calls"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_contact_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_contact_list"
                android:layout_width="@dimen/sp_25"
                android:layout_height="@dimen/sp_25"
                android:layout_gravity="center"
                android:src="@drawable/ic_contact"
                app:tint="@color/grey" />

            <TextView
                android:id="@+id/txt_contact_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_5"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="@string/tab_contact_list"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>