<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:padding="@dimen/margin_20">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="@dimen/sp_25"
        android:layout_height="@dimen/sp_25"
        android:layout_alignParentRight="true"
        android:padding="@dimen/sp_5"
        android:src="@drawable/ic_baseline_close_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_close"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="@dimen/sp_46"
            android:layout_height="@dimen/sp_60"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_20"
            android:src="@drawable/ic_excel_dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/upload_excel_file"
            android:textColor="@color/black"
            android:textSize="@dimen/text_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/noti_des"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15">

            <ImageView
                android:id="@+id/img_excel"
                android:layout_width="@dimen/sp_20"
                android:layout_height="@dimen/sp_20"
                android:src="@drawable/ic_excel_icon" />

            <TextView
                android:id="@+id/txt_excel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_toRightOf="@+id/img_excel"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/upload_excel_file"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_excel"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_toRightOf="@+id/img_excel"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_sample_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ic_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_download"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="@string/sample_exe_file"
                        android:textColor="@color/darkturquoise"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_file_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/txt_excel"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/sample_exe_file"
                        android:textColor="@color/darkturquoise"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_phone_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_ph_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/price"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/txt_file_namenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_sample_txt"
                        android:layout_marginLeft="@dimen/margin_3"
                        android:layout_toRightOf="@+id/txt_ph_no"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/phone_number_and"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/txt_email_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_sample_txt"
                        android:layout_marginLeft="@dimen/margin_3"
                        android:layout_toRightOf="@+id/txt_file_namenumber"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/price"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/text_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_sample_txt"
                        android:layout_marginLeft="@dimen/margin_3"
                        android:layout_toRightOf="@+id/txt_email_id"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@string/email"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_select_file"
                android:layout_width="@dimen/sp_78"
                android:layout_height="@dimen/sp_25"
                android:layout_alignParentRight="true"
                android:background="@drawable/login_btn_bg"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/select_file"
                android:textColor="@color/white"
                android:textSize="@dimen/text_10" />

            <ImageView
                android:id="@+id/ic_close"
                android:layout_width="@dimen/sp_16"
                android:layout_height="@dimen/sp_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_close_icon"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sp_40"
            android:layout_below="@+id/dis_txt"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginBottom="@dimen/margin_10"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialog_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:layout_weight="1"
                android:background="@drawable/grey_boader_btn"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/cancel"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_14" />

            <View
                android:layout_width="@dimen/margin_15"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialog_yes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:layout_weight="1"
                android:background="@drawable/rectangle_150"
                android:backgroundTint="@color/darkturquoise"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/upload_file"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>