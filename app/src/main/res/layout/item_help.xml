<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_50">

        <TextView
            android:id="@+id/txt_faq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_10"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/faq1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:id="@+id/img_up_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_15"
            android:src="@drawable/ic_up_arrow" />

        <ImageView
            android:id="@+id/img_down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_15"
            android:rotation="180"
            android:src="@drawable/ic_up_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:lineSpacingExtra="@dimen/sp_3"
            android:text="@string/noti_des"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_1"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:background="@color/bg_grey_color" />

</LinearLayout>
