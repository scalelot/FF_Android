<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.LoginVerifyActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/sp_35"
        android:layout_height="@dimen/sp_35"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:padding="@dimen/margin_6"
        android:src="@drawable/backarrow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_40"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/verify_number"
        android:textColor="@color/black"
        android:textSize="@dimen/text_24"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_30"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/enter_otp_des"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/txt_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3"
            android:fontFamily="@font/roboto_regular"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_30"
        android:gravity="center"
        android:orientation="horizontal">

        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/otpTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:visibility="visible"
            app:height="@dimen/sp_55"
            app:length="4"
            app:otp_box_background="@drawable/edt_bg"
            app:otp_box_background_active="@drawable/select_btn_bg"
            app:otp_text_size="@dimen/text_18"
            app:width="@dimen/sp_55" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/otp_time"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/not_received_otp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/txt_resend_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:fontFamily="@font/roboto_regular"
            android:singleLine="true"
            android:text="@string/resend_code"
            android:textColor="@color/app_color"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_50"
        android:layout_margin="@dimen/margin_30"
        android:background="@drawable/verify_btn_bg"
        android:fontFamily="@font/roboto_medium"
        android:padding="@dimen/margin_10"
        android:text="@string/verify"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16" />
</LinearLayout>