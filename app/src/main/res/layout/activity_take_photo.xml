<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_flash"
            android:layout_width="@dimen/sp_40"
            android:layout_height="@dimen/sp_45"
            android:padding="@dimen/margin_8"
            android:src="@drawable/ic_off" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="@dimen/sp_40"
            android:layout_height="@dimen/sp_45"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_5"
            android:padding="@dimen/sp_8"
            android:src="@drawable/close_1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lin_camera"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sp_70"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/sp_10"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnSwitch"
                android:layout_width="@dimen/margin_35"
                android:layout_height="@dimen/margin_35"
                android:src="@drawable/ic_swich_camera" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sp_62"
                android:layout_marginRight="@dimen/sp_62">

                <ImageView
                    android:id="@+id/btnCam"
                    android:layout_width="@dimen/sp_60"
                    android:layout_height="@dimen/sp_60"
                    android:src="@drawable/ic_capture_camera"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_stop"
                    android:layout_width="@dimen/sp_60"
                    android:layout_height="@dimen/sp_60"
                    android:src="@drawable/stop"
                    android:visibility="gone" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_collection"
                android:layout_width="@dimen/margin_35"
                android:layout_height="@dimen/margin_35"
                android:src="@drawable/ic_collections_white_24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <SurfaceView
                android:id="@+id/surfaceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>