<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:elevation="@dimen/margin_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="@dimen/sp_25"
            android:layout_height="@dimen/sp_25"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:padding="@dimen/margin_5"
            android:src="@drawable/ic_baseline_close_20" />

        <ImageView
            android:id="@+id/frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_30"
            android:background="@drawable/ic_delete_dialog"
            android:clipToOutline="true" />

        <TextView
            android:id="@+id/delete_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frame"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_10"
            android:fontFamily="@font/roboto_bold"
            android:lineSpacingExtra="@dimen/sp_7"
            android:text="@string/delete_prod"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_20" />

        <TextView
            android:id="@+id/are_you_sur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/delete_prod"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:gravity="center"
            android:text="@string/are_you_sur"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/are_you_sur"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_30"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/sp_130"
                android:layout_height="@dimen/sp_40"
                android:layout_marginRight="@dimen/margin_8"
                android:background="@drawable/grey_rectangle_bg"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="@dimen/dp38"
                android:paddingRight="@dimen/dp38"
                android:text="@string/cancel"
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_14" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_delete"
                android:layout_width="@dimen/sp_130"
                android:layout_height="@dimen/sp_40"
                android:layout_marginLeft="@dimen/margin_8"
                android:background="@drawable/ic_pro_offer_bg"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="@dimen/dp38"
                android:paddingRight="@dimen/dp38"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>